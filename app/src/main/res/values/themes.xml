<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base con colores claros y azul elÃ©ctrico -->
    <style name="Theme.InmobiliariaLucero" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/azul_electrico</item>
        <item name="colorPrimaryVariant">@color/azul_electrico</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/azul_electrico</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Fondo general claro -->
        <item name="android:colorBackground">#FAFAFA</item>
        <item name="android:textColor">#212121</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Desactivar modo oscuro -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <!-- Variante sin ActionBar -->
    <style name="Theme.InmobiliariaLucero.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Overlays -->
    <style name="Theme.InmobiliariaLucero.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.InmobiliariaLucero.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
